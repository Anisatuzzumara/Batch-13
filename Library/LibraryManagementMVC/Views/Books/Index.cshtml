@model IEnumerable<LibraryManagementMVC.Models.Book>
@{
    ViewData["Title"] = "Books List";
}

<h1>Books List</h1>
<p><a asp-action="Create" class="btn btn-primary">Add New Book</a></p>

@if (!Model.Any())
{
    <div class="alert alert-info">No books found.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Published Year</th>
                <th>Publisher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>@item.PublishedYear</td>
                    <td>@item.Publisher?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
