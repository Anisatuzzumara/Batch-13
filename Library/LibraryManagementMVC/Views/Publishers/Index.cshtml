@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<LibraryManagementMVC.DTOs.PublisherDto>
@{
    ViewData["Title"] = "Manage Publishers";
}

<h1>Manage Publishers</h1>
<p><a asp-action="Create" class="btn btn-primary">Add New Publisher</a></p>

<!-- Form pencarian tetap sama -->

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Books Count</th> <!-- Menggunakan properti dari DTO -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Country</td>
            <td>@item.BooksCount</td> <!-- Menggunakan properti dari DTO -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                
            </td>
        </tr>
        }
    </tbody>
</table>