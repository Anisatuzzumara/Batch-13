@model LibraryManagementMVC.DTOs.PublisherDto

@{
    ViewData["Title"] = "Delete Publisher";
}

<h1>Delete Publisher</h1>
<hr />
<h3>Are you sure you want to delete this publisher?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Country</dt>
    <dd class="col-sm-10">@Model.Country</dd>
    <dt class="col-sm-2">Books Count</dt>
    <dd class="col-sm-10">@Model.BooksCount</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
